<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="73dp"
        android:layout_height="73dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/item_cart_picture"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Item Name"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="18dp"
        android:id="@+id/item_cart_name"
        android:autoText="false"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/item_cart_picture" />

    <TextView
        android:text="Quantity:"
        android:layout_width="wrap_content"
        android:id="@+id/textView5"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/item_cart_picture"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_cart_quantity"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_cart_price" />

    <TextView
        android:text="Price:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/item_cart_picture"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_cart_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_cart_price"
        android:text="helper"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_cart_name" />
</android.support.constraint.ConstraintLayout>